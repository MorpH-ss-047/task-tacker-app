<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.phone.OTPActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="355dp"
        android:layout_height="360dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/to_do_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/enterOTPTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/enter_otp"
        android:textSize="30sp"
        android:textStyle="bold"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otpCard1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginStart="10dp"
        app:cardElevation="8dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/otpCard2"
        app:layout_constraintTop_toBottomOf="@+id/enterOTPTv">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otpEt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otpCard2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintEnd_toStartOf="@id/otpCard3"
        app:layout_constraintStart_toEndOf="@id/otpCard1"
        app:layout_constraintTop_toBottomOf="@id/enterOTPTv">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otpEt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otpCard3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintEnd_toStartOf="@id/otpCard4"
        app:layout_constraintStart_toEndOf="@id/otpCard2"
        app:layout_constraintTop_toBottomOf="@id/enterOTPTv">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otpEt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otpCard4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintEnd_toStartOf="@id/otpCard5"
        app:layout_constraintStart_toEndOf="@id/otpCard3"
        app:layout_constraintTop_toBottomOf="@id/enterOTPTv">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otpEt4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otpCard5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintEnd_toStartOf="@id/otpCard6"
        app:layout_constraintStart_toEndOf="@id/otpCard4"
        app:layout_constraintTop_toBottomOf="@id/enterOTPTv">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otpEt5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otpCard6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/otpCard5"
        app:layout_constraintTop_toBottomOf="@id/enterOTPTv">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otpEt6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/wrongOTPTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/wrong_otp_entered"
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:visibility="invisible"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/verifyOTPButton"
        app:layout_constraintStart_toStartOf="@id/verifyOTPButton"
        app:layout_constraintTop_toBottomOf="@id/otpCard3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifyOTPButton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:text="@string/verify"
        android:textSize="16sp"
        app:backgroundTint="#004AAD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wrongOTPTv" />

    <TextView
        android:id="@+id/didntRecieveOtpTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/verifyOTPButton"
        app:layout_constraintRight_toRightOf="@id/verifyOTPButton"
        app:layout_constraintTop_toBottomOf="@id/verifyOTPButton"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="35dp"
        android:text="@string/didn_t_recieve_the_otp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/resendOTPTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resend_otp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="#C80303"
        app:layout_constraintLeft_toLeftOf="@id/didntRecieveOtpTv"
        app:layout_constraintRight_toRightOf="@id/didntRecieveOtpTv"
        app:layout_constraintTop_toBottomOf="@id/didntRecieveOtpTv" />



</androidx.constraintlayout.widget.ConstraintLayout>