<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskTrackerLight"
        tools:targetApi="31">
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".AddTaskActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskTrackerWhiteStatusBar" />
        <activity
            android:name=".AddNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskTrackerWhiteStatusBar" />
        <activity
            android:name=".authentication.CompleteRegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.email.EmailLoginActivity"
            android:theme="@style/Theme.TaskTrackerWhiteStatusBar"
            android:exported="false" />
        <activity
            android:name=".authentication.email.EmailSignupActivity"
            android:theme="@style/Theme.TaskTrackerWhiteStatusBar"
            android:exported="false" />
        <activity
            android:name=".authentication.phone.OTPActivity"
            android:theme="@style/Theme.TaskTrackerWhiteStatusBar"
            android:exported="false" />
        <activity
            android:name=".authentication.phone.PhoneLoginActivity"
            android:theme="@style/Theme.TaskTrackerWhiteStatusBar"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>